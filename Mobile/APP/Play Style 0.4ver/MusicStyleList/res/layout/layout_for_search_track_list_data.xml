<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dip"
    android:paddingBottom="10dip">

    <ImageView
        android:id="@+id/list_thumb_image_view"
        android:layout_width="80dip"
        android:layout_height="60dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/list_track_add_linearlayout_layout"
        android:layout_width="50dip"
        android:layout_height="70dip"
        android:layout_margin="10dip"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_duration_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dip"
            android:textColor="#26A69A"
            android:textSize="12sp" />

        <Button
            android:id="@+id/list_add_playlist"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_track_info_linearlayout_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:layout_toLeftOf="@id/list_track_add_linearlayout_layout"
        android:layout_toRightOf="@id/list_thumb_image_view"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/list_title_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="5dip"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="#222222"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/list_uploader_text_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dip"
            android:paddingLeft="2dip"
            android:textColor="#795548"
            android:maxLines="1"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>